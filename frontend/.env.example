# CommendAI Environment Variables
# Copy this file to .env.local and fill in your actual values

# Google Analytics 4
REACT_APP_GA_TRACKING_ID=G-XXXXXXXXXX

# Enable GA in development (optional)
REACT_APP_GA_DEBUG=false

# Google Search Console
REACT_APP_GOOGLE_SITE_VERIFICATION=XXXXXXXXXXXXXXXXXXXX

# Microsoft Clarity (optional)
REACT_APP_CLARITY_TRACKING_ID=XXXXXXXXXX

# Bing Webmaster Tools
REACT_APP_BING_SITE_VERIFICATION=XXXXXXXXXXXXXXXXXXXX

# Site Configuration
REACT_APP_SITE_URL=https://commend-ai.vercel.app
REACT_APP_SITE_NAME=CommendAI

# API URLs (if different from default)
REACT_APP_API_BASE_URL=https://commend-ai.vercel.app/api

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_SEO_MONITORING=true
REACT_APP_ENABLE_PERFORMANCE_TRACKING=true